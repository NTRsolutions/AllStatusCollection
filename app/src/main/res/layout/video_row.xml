<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:elevation="6dp"
        app:cardElevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/video_row_tv"
                android:text="12 Natural ways to boost up your energy"
                android:textSize="14dp"
                android:layout_margin="8dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/video_row_iv"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_fb"
                    android:id="@+id/video_row_iv_fb_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <View
                    android:layout_width="1dp"
                    android:background="#E0E0E0"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_whatsapp"
                    android:id="@+id/video_row_iv_whatsapp_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <View
                    android:layout_width="1dp"
                    android:background="#E0E0E0"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_twitter"
                    android:id="@+id/video_row_twitter_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <View
                    android:layout_width="1dp"
                    android:background="#E0E0E0"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_share_black"
                    android:id="@+id/video_row_iv_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>